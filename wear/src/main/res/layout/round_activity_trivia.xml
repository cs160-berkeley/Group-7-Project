<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs160.autismbuddie.TriviaActivity"
    tools:deviceIds="wear_round">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/trivia_home"
        android:id="@+id/trivia_home"
        android:visibility="visible"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trivia_tut"
        android:id="@+id/trivia_tut"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trivia_back"
        android:id="@+id/trivia_back"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/trivia_fact_1"
        android:layout_width="250px"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:text="FOFOFO we ARE POO \n HELLO FOO asdfasdsd"
        android:textColor="#000000"
        android:layout_marginTop="100px"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/trivia_fact_2"
        android:layout_width="250px"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:text="Pikachu is a rat"
        android:textColor="#000000"
        android:layout_marginTop="100px"
        android:visibility="gone"/>
</RelativeLayout>
