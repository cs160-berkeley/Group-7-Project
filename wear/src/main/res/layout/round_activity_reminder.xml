<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs160.autismbuddie.ReminderActivity"
    tools:deviceIds="wear_round">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reminder_back"
        android:id="@+id/reminder_back"/>
    <TextView
        android:layout_width="250px"
        android:layout_height="90px"
        android:text="Loren IPsum"
        android:textSize="20px"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85px"
        android:id="@+id/reminder_text"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reminder_complete"
        android:id="@+id/reminder_complete"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reminder_incomplete"
        android:id="@+id/reminder_incomplete"
        android:visibility="gone"/>
</RelativeLayout>
